# 服务器配置
PORT=3001
NODE_ENV=development

#192.168.114.111:3306  root/Fl@123456
# 数据库配置
DB_HOST=192.168.114.111
DB_PORT=3306
DB_NAME=rss_llm_tts
DB_USER=root
DB_PASSWORD=Fl@123456

# JWT密钥
JWT_SECRET=your_jwt_secret_key_here

# LLM API配置
LLM_API_URL=https://api.openai.com/v1/chat/completions
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo

# TTS API配置
TTS_API_URL=https://api.openai.com/v1/audio/speech
TTS_API_KEY=your_openai_tts_key_here
TTS_VOICE=alloy

# 新闻抓取配置
RSS_FETCH_INTERVAL=3600000
NEWS_RETENTION_HOURS=24
MAX_NEWS_PER_FEED=50

# 对话生成配置
DIALOGUE_NEWS_COUNT=5
DIALOGUE_ROUNDS=8

# 文件存储配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760 